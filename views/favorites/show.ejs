<h1>Your Favorites</h1>

<p id="favorites">
  <% user.favorites.forEach(f => { %>
    <p><%= f.name %></p>
    <img src="<%= f.image %>" alt="image of favorited recipe">
    <p>Serving: <%= f.serving %></p>
    <a href="<%= f.url %>">Click here to view the recipe</a>
    <form id="favorites" method="POST" action="/favorites/<%= f.id %>?_method=DELETE">
        <input type="submit" value="Delete">
    </form>
    <br>
  <% }) %>
</p>